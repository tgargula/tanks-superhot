<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="pl.edu.agh.cs.lab.tgargula.widget.SettingsController"
      prefHeight="400.0" prefWidth="600.0" styleClass="spacing-100">
    <Text styleClass="title" text="TANKS SUPERHOT"/>
    <VBox styleClass="box">
        <HBox alignment="CENTER" styleClass="box">
            <Text styleClass="text-text" text="Rozmiar mapy:"/>
            <Slider fx:id="mapSizeSlider" min="10" max="30" value="20" showTickLabels="true" showTickMarks="true"
                    majorTickUnit="1" minorTickCount="0" blockIncrement="1" prefWidth="500" snapToTicks="true"/>
        </HBox>
        <HBox alignment="CENTER" styleClass="box">
            <Text styleClass="text-text" text="Poziom:"/>
            <Slider fx:id="levelSlider" min="1" max="4" value="2" showTickLabels="true" showTickMarks="true"
                    majorTickUnit="1" minorTickCount="0" blockIncrement="1" prefWidth="300" snapToTicks="true"/>
        </HBox>
        <HBox alignment="CENTER" styleClass="box">
            <Button text="Rozpocznij grÄ™" onAction="#startGame" styleClass="button"/>
        </HBox>
    </VBox>

</VBox>
